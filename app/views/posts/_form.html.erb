<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :images, multiple: true, required: true %>
  </div>

  <div>
    <%= form.label :longitude, style: "display: block" %>
    <%= form.text_field :longitude %>
  </div>

  <div>
    <%= form.label :lattitude, style: "display: block" %>
    <%= form.text_field :lattitude %>
  </div>

  <div>
    <%= form.label :allow_to_comment, style: "display: block" %>
    <%= form.check_box :allow_to_comment %>
  </div>

  <div>
    <%= form.label :show_likes, style: "display: block" %>
    <%= form.check_box :show_likes %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
